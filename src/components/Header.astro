---
import portrait from '@/assets/me_no_bg.webp'
import ThemeIcon from '@/components/ThemeIcon.astro'
import ScrollDown from '@/components/ScrollDown.astro'
import WeatherWidget from '@/components/WeatherWidget.svelte'
---

<section
  class="w-full h-screen relative flex flex-col justify-center bg-gradient-to-tl from-fuchsia-900 to-base-100"
>
  <div class="pt-10 pl-8 mb-8 xl:mb-0 xl:absolute xl:left-0 xl:top-0">
    <ThemeIcon />
  </div>
  <div
    class="bg-accent text-accent-content h-5/6 sm:w-5/6 w-11/12 max-w-screen-xl mx-auto flex flex-col gap-10 justify-center items-start px-10 lg:px-28"
  >
    <div class="max-w-[70%] flex flex-col items-start gap-4">
      <header>
        <h1
          class="sm:pt-0 animate-typing overflow-hidden whitespace-nowrap border-r-4 border-r-white text-2xl md:text-4xl lg:text-5xl xl:text-6xl font-normal"
        >
          Hi! my name is Eloi
        </h1>
      </header>
      <div class="lg:flex gap-4 items-center relative block space-y-2">
        <p class="text-base sm:text-2xl font-sans">
          I'm a <span class="font-bold">software developer</span>, from <span
            class="border border-accent-content rounded px-2">Barcelona</span
          >
        </p>
        <div class="lg:absolute lg:-right-28 lg:-top-8 lg:mt-0 pb-4">
          <WeatherWidget client:load />
        </div>
      </div>
    </div>
    <div
      class="w-[200px] sm:w-[300px] lg:w-[400px] xl:w-[600px] absolute right-0 bottom-0 self-end"
    >
      <img src={portrait} alt="Portrait of me" width="100%" />
    </div>
  </div>
  <div class="mx-auto mt-4"><ScrollDown /></div>
</section>
